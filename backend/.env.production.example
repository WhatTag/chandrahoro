# ChandraHoro V2.1 - Backend Production Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# Application Configuration
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=production

# Debug mode
DEBUG=false

# ============================================================================
# Database Configuration
# ============================================================================

# MySQL database connection string (Azure Database for MySQL)
# Format: mysql://username:password@host:port/database?ssl=true
DATABASE_URL=mysql://username:password@server.mysql.database.azure.com:3306/chandrahoro?ssl=true

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis URL for caching and sessions
REDIS_URL=redis://default:password@your-redis-server.redis.cache.windows.net:6379

# ============================================================================
# AI Provider Configuration
# ============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-actual-key-here

# OpenAI API (optional)
OPENAI_API_KEY=sk-your-openai-key-here

# Google Gemini API (optional)
GOOGLE_API_KEY=your-google-api-key-here

# ============================================================================
# Authentication & Security
# ============================================================================

# JWT secret for token signing
JWT_SECRET=your-generated-jwt-secret-here

# JWT expiration time (in hours)
JWT_EXPIRATION_HOURS=24

# ============================================================================
# External Services
# ============================================================================

# Google Maps API (for geocoding)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# GeoNames API (for location search)
GEONAMES_USERNAME=your-geonames-username

# ============================================================================
# Email Configuration
# ============================================================================

# Email provider (sendgrid, mailgun, smtp)
EMAIL_PROVIDER=sendgrid

# SendGrid API key
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Email from address
EMAIL_FROM=noreply@your-domain.com

# ============================================================================
# Logging & Monitoring
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# CORS Configuration
# ============================================================================

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# Swiss Ephemeris Configuration
# ============================================================================

# Swiss Ephemeris data path (optional, uses default if not set)
EPHEMERIS_DATA_PATH=/app/ephemeris_data

# ============================================================================
# Rate Limiting
# ============================================================================

# Rate limit requests per minute
RATE_LIMIT_PER_MINUTE=60

# Rate limit for AI endpoints per hour
AI_RATE_LIMIT_PER_HOUR=100

# ============================================================================
# Feature Flags
# ============================================================================

# Enable AI features
ENABLE_AI_FEATURES=true

# Enable premium features
ENABLE_PREMIUM_FEATURES=true

# Enable beta features
ENABLE_BETA_FEATURES=false

# ============================================================================
# Cron Jobs
# ============================================================================

# Cron job security secret
CRON_SECRET=your-generated-cron-secret-here

# Enable daily readings job
ENABLE_DAILY_READINGS_JOB=true

# Enable transit alerts job
ENABLE_TRANSIT_ALERTS_JOB=true

# ============================================================================
# Azure Configuration (if using Azure services)
# ============================================================================

# Azure Storage connection string
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...

# Azure Key Vault URL
AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# ============================================================================
# Development & Testing
# ============================================================================

# Skip authentication in development
SKIP_AUTH=false

# Mock AI responses in development
MOCK_AI_RESPONSES=false

# Enable request logging
ENABLE_REQUEST_LOGGING=true

