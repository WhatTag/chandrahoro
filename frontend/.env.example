# ChandraHoro V2.1 Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# Application Configuration
# ============================================================================

# Application URL (used for metadata and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application details
NEXT_PUBLIC_APP_NAME=ChandraHoro
NEXT_PUBLIC_APP_VERSION=2.1.0

# Environment (development, staging, production)
NODE_ENV=development

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Python Backend Configuration (Swiss Ephemeris)
# ============================================================================

# Python FastAPI backend URL
PYTHON_BACKEND_URL=http://localhost:8000

# Python backend API key (if authentication required)
PYTHON_API_KEY=your-python-backend-api-key

# Backend connection timeout
PYTHON_BACKEND_TIMEOUT=30000

# ============================================================================
# Authentication & Security
# ============================================================================

# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# NextAuth.js URL
NEXTAUTH_URL=http://localhost:3000

# JWT secret for custom auth
JWT_SECRET=your-jwt-secret-here

# ============================================================================
# AI Provider Configuration
# ============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenAI API
OPENAI_API_KEY=your-openai-api-key-here

# Google Gemini API
GOOGLE_API_KEY=your-google-api-key-here

# Default AI model
NEXT_PUBLIC_DEFAULT_AI_MODEL=claude-3-sonnet

# ============================================================================
# Supabase Configuration (if using Supabase)
# ============================================================================

# Supabase URL
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url-here

# Supabase Anon Key
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ============================================================================
# Feature Flags
# ============================================================================

# Enable AI features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable premium features
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES=true

# Enable beta features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# Analytics & Monitoring
# ============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (error tracking)
SENTRY_DSN=your-sentry-dsn-here

# ============================================================================
# External Services
# ============================================================================

# Google Maps API (for place autocomplete in onboarding)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Location/Geocoding API (for birth place lookup)
GEOCODING_API_KEY=your-geocoding-api-key-here

# Email service
EMAIL_PROVIDER=console
EMAIL_API_KEY=your-email-api-key-here
EMAIL_FROM=noreply@chandrahoro.com

# Resend (if using Resend for email)
RESEND_API_KEY=your-resend-api-key-here

# SendGrid (if using SendGrid for email)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# ============================================================================
# Database Configuration
# ============================================================================

# MySQL database connection string
DATABASE_URL=mysql://username:password@localhost:3306/chandrahoro

# Redis for caching and sessions
REDIS_URL=redis://localhost:6379

# ============================================================================
# Localization
# ============================================================================

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Default timezone
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Kolkata

# ============================================================================
# Development & Testing
# ============================================================================

# Skip authentication in development
SKIP_AUTH=false

# Mock AI responses in development
MOCK_AI_RESPONSES=false

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# ============================================================================
# Cron Jobs & Scheduling
# ============================================================================

# Cron job security secret (generate with: openssl rand -base64 32)
CRON_SECRET=your-cron-secret-here

# Push notifications (optional)
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here

# Firebase Cloud Messaging (optional)
FCM_SERVER_KEY=your-fcm-server-key-here

