# ChandraHoro V2.1 - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# ============================================================================
# Application Configuration
# ============================================================================

# Application URL (used for metadata and redirects)
NEXT_PUBLIC_APP_URL=https://your-domain.com

# Application details
NEXT_PUBLIC_APP_NAME=ChandraHoro
NEXT_PUBLIC_APP_VERSION=2.1.0

# Environment
NODE_ENV=production

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL (Azure App Service URL)
NEXT_PUBLIC_API_URL=https://chandrahoro-backend.azurewebsites.net

# API timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# ============================================================================
# Authentication & Security
# ============================================================================

# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-generated-nextauth-secret-here

# NextAuth.js URL
NEXTAUTH_URL=https://your-domain.com

# JWT secret for custom auth
JWT_SECRET=your-generated-jwt-secret-here

# ============================================================================
# AI Provider Configuration
# ============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-your-actual-key-here

# Default AI model
NEXT_PUBLIC_DEFAULT_AI_MODEL=claude-3-sonnet

# ============================================================================
# Database Configuration
# ============================================================================

# MySQL database connection string (Azure Database for MySQL)
DATABASE_URL=mysql://username:password@server.mysql.database.azure.com:3306/chandrahoro?ssl=true

# ============================================================================
# Feature Flags
# ============================================================================

# Enable AI features
NEXT_PUBLIC_ENABLE_AI_FEATURES=true

# Enable premium features
NEXT_PUBLIC_ENABLE_PREMIUM_FEATURES=true

# Enable beta features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# Analytics & Monitoring
# ============================================================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# External Services
# ============================================================================

# Google Maps API (for place autocomplete in onboarding)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Location/Geocoding API
GEOCODING_API_KEY=your-geocoding-api-key-here

# Email service
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your-sendgrid-api-key-here
EMAIL_FROM=noreply@your-domain.com

# ============================================================================
# Localization
# ============================================================================

# Default language
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Default timezone
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Kolkata

# ============================================================================
# Cron Jobs & Scheduling
# ============================================================================

# Cron job security secret (generate with: openssl rand -base64 32)
CRON_SECRET=your-generated-cron-secret-here

